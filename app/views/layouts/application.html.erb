<!DOCTYPE html>
<html>
  <head>
    <title>WebApp20</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css' %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>

    <div class="container">
      <div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm">
        <h5 class="my-0 mr-md-auto font-weight-normal">Blog</h5>
        <nav class="my-2 my-md-0 mr-md-3">
          <a class="p-2 text-dark" href="<%= posts_path %>">Всі пости</a>
          <a class="p-2 text-dark" href="<%= categories_path %>">Всі категорії</a>
        </nav>
        <a class="btn btn-outline-primary" href="<%= new_post_path %>">Створити пост</a>
      </div>
    </div>

    <div class="container main">
      <div class="row">
        <div class="col-md-12">
          <% flash.each do |name, message| %>
            <div class="alert alert-<%= name %>" >
              <%= message %>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <div class="container main">
      <div class="row">
        <div class="col-md-9">
          <%= yield %>
        </div>
        <div class="col-md-3">
          <%= render 'shared/submenu' %>
        </div>
      </div>
    </div>

  </body>
</html>
