<h1>Категорії</h1>

<div class = "buttons_panel">
  <%= link_to 'Нова категорія', new_category_path,
  class: 'btn btn-outline-primary btn-sm' %>
</div>

<section id="categories">
  <table class="table">
    <thead>
      <tr>
        <th>#</th>
        <th>Назва</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @categories.each_with_index do |category, index| %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= category.name %></td>
          <td>
            <%= link_to 'Змінити', edit_category_path(category),
            class: 'btn btn-outline-primary btn-sm' %>
            <%= link_to 'Видалити', category_path(category),
            method: :delete, data: {confirm: 'Ви впевнені?'}, class: 'btn btn-outline-danger btn-sm' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>
